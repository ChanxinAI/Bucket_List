/* 全局样式 */
page {
  background-color: #111111;
  color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 主色调 */
.primary-color {
  color: #C4A2FF;
}

.primary-bg {
  background-color: #C4A2FF;
}

/* 按钮样式 */
.btn {
  border-radius: 8px;
  padding: 12rpx 24rpx;
  text-align: center;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #C4A2FF;
  color: #FFFFFF;
}

.btn-secondary {
  background-color: #333333;
  color: #FFFFFF;
  border: 1rpx solid #555555;
}

.btn-secondary:active {
  background-color: #444444;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  color: #FFFFFF;
}

/* 网格布局 */
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 120rpx;
}

/* 吸底按钮 */
.bottom-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #111111;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.3);
  z-index: 100;
}

.bottom-btn button {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}