<view class="container">
  <text class="title">人生体验清单（学生时代）</text>
  
  <view class="grid">
    <block wx:for="{{experiences}}" wx:key="index">
      <view 
        class="experience-item {{selectedExperiences.indexOf(item) > -1 ? 'selected' : ''}}" 
        bindtap="toggleExperience"
        data-experience="{{item}}"
       style="height: 114rpx; display: flex; box-sizing: border-box">
        <text class="experience-text">{{item}}</text>
      </view>
    </block>
  </view>
  
  <view class="bottom-btn">
    <button 
      class="btn btn-primary" 
      bindtap="shareLife"
    >
      分享人生
    </button>
  </view>
  
  <!-- 隐藏的画布，用于生成分享图片 -->
  <canvas 
    type="2d" 
    id="shareCanvas" 
    style="width: 375px; height: 667px; position: fixed; left: -9999px; top: -9999px;" 
  />
</view>